        <div class="drawer-header">
            <h2>Your Bag</h2>
            <button id="close-drawer">&times;</button>
        </div>
        <div id="cart-items-list">
            <p style="text-align:center; padding-top:50px; color:#999;">Your bag is currently empty.</p>
        </div>
        <div class="drawer-footer">
            <div class="total-container">
                <span>Total</span>
                <span id="cart-total">$0.00</span>
            </div>
            <button class="checkout-btn">Checkout</button>
        </div>
    </div>

    <div id="drawer-overlay"></div>

    <script>
        let cart = [];
        const drawer = document.getElementById('cart-drawer');
        const overlay = document.getElementById('drawer-overlay');
        const list = document.getElementById('cart-items-list');
        const totalDisp = document.getElementById('cart-total');
        const countDisp = document.getElementById('cart-count');

        // Cart Visibility
        document.querySelector('.cart-link').addEventListener('click', (e) => {
            e.preventDefault();
            drawer.classList.add('open');
            overlay.style.display = 'block';
        });

        document.getElementById('close-drawer').onclick = close;
        overlay.onclick = close;

        function close() {
            drawer.classList.remove('open');
            overlay.style.display = 'none';
        }

        // Add Logic
        document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
            btn.onclick = () => {
                const name = btn.getAttribute('data-name');
                const price = parseFloat(btn.getAttribute('data-price'));
                cart.push({name, price});
                update();
                
                btn.innerText = "Added!";
                setTimeout(() => btn.innerText = "Add to Bag", 1000);
            };
        });

        // Remove Logic
        function remove(idx) {
            cart.splice(idx, 1);
            update();
        }

        // UI Update
        function update() {
            countDisp.innerText = cart.length;
            list.innerHTML = '';
            let total = 0;

            cart.forEach((item, i) => {
                total += item.price;
                list.innerHTML += `
                    <div class="cart-item">
                        <div>
                            <strong>${item.name}</strong><br>
                            <small>$${item.price.toFixed(2)}</small>
                        </div>
                        <button class="remove-btn" onclick="remove(${i})">Remove</button>
                    </div>
                `;
            });

            if(cart.length === 0) list.innerHTML = '<p style="text-align:center; padding-top:50px; color:#999;">Your bag is currently empty.</p>';
            totalDisp.innerText = `$${total.toFixed(2)}`;
        }
    </script>
